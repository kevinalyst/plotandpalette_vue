# Plot & Palette Environment Configuration
# Copy this file to docker.env and customize as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=plot_palette_root_2024
MYSQL_DATABASE=plot_palette
MYSQL_USER=app_user
MYSQL_PASSWORD=secure_app_password_2024

# Application Settings
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# API Keys (Optional - for enhanced features)
# Uncomment and add your keys if you have them
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Service Configuration
BACKEND_PORT=5000
EMOTION_API_PORT=8001
STORY_API_PORT=8002
NGINX_PORT=80
MYSQL_PORT=3306

# Application URLs (for production deployment)
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost:5000

# Development Settings
NODE_ENV=production
VUE_APP_API_URL=http://localhost

# Security Settings (Change in production)
CORS_ORIGINS=["http://localhost", "http://localhost:8080", "http://127.0.0.1:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/plot-palette/application.log

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Feature Flags
ENABLE_STORY_GENERATION=true
ENABLE_EMOTION_PREDICTION=true
ENABLE_SOCIAL_SHARING=true
ENABLE_FILE_UPLOAD=true

# Data Directories
UPLOADS_DIR=/app/uploads
LOGS_DIR=/app/logs
STATIC_DIR=/app/static 